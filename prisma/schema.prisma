generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id      String  @id @default(uuid())
  balance Float
  name    String  @unique
  entries Entry[]
}

model Category {
  id      String  @id @default(uuid())
  name    String  @unique
  entries Entry[]
}

model Entry {
  id          String   @id @default(uuid())
  status      Status
  description String
  amount      Float
  date        DateTime
  categoryId  String
  category    Category @relation(fields: [categoryId], references: [id])
  repeatId    String?
  repeat      Repeat?  @relation(references: [id], fields: [repeatId])
  accountId   String
  account     Account  @relation(fields: [accountId], references: [id])
  tags        Tag[]
}

model Repeat {
  id      String     @id @default(uuid())
  times   Int?
  unit    RepeatUnit
  endDate DateTime?
  entries Entry[]
}

model Tag {
  id      String  @id @default(uuid())
  label   String  @unique
  entries Entry[]
}

enum Status {
  PENDING
  PAID
  EXPIRED
}

enum RepeatUnit {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}
